---
import Layout from '../../layouts/Layout.astro';

const url = new URL(Astro.request.url);
const redirect = url.searchParams.get('redirect') || '/dashboard';
---

<Layout title="Zarejestruj siÄ™ - Self-Storage">
  <div class="min-h-screen bg-background flex items-center justify-center pt-24">
    <div class="w-full max-w-md mx-6">
      <div class="bg-primary rounded-3xl p-8 border border-secondary">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-accent rounded-2xl flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-text-dark">ðŸ‘‹</span>
          </div>
          <h1 class="text-3xl font-bold text-accent font-canela mb-2">
            Zarejestruj siÄ™
          </h1>
          <p class="text-gray-300">
            StwÃ³rz konto i zacznij korzystaÄ‡ z magazynÃ³w
          </p>
        </div>
        
        <form id="registerForm" class="space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="twÃ³j@email.pl"
            />
          </div>
          
          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-300 mb-2">
              ImiÄ™ i nazwisko
            </label>
            <input
              type="text"
              id="fullName"
              name="fullName"
              required
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="Jan Kowalski"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-300 mb-2">
              Numer telefonu
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="+48 123 456 789"
            />
          </div>
          
          <div>
            <label for="nip" class="block text-sm font-medium text-gray-300 mb-2">
              NIP (opcjonalnie)
            </label>
            <input
              type="text"
              id="nip"
              name="nip"
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="123-456-78-90"
            />
          </div>
          
          <div>
            <label for="address" class="block text-sm font-medium text-gray-300 mb-2">
              Adres rozliczeniowy
            </label>
            <textarea
              id="address"
              name="address"
              rows="3"
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent resize-none"
              placeholder="ul. PrzykÅ‚adowa 123, 00-001 Warszawa"
            ></textarea>
          </div>
          
          <div>
            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
              HasÅ‚o
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="6"
              class="w-full bg-secondary border border-secondary rounded-lg px-4 py-3 text-accent placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
            />
          </div>
          
          <button
            type="submit"
            class="w-full bg-accent text-text-dark font-bold py-4 rounded-xl hover:bg-gray-300 transition-colors"
          >
            Zarejestruj siÄ™
          </button>
          
          <div class="text-center">
            <p class="text-gray-400 text-sm">
              Masz juÅ¼ konto? 
              <a href="/auth/login" class="text-accent hover:underline">
                Zaloguj siÄ™
              </a>
            </p>
          </div>
        </form>
        
        <div id="errorMessage" class="hidden mt-4 p-4 bg-red-500/20 border border-red-500/50 rounded-lg text-red-400 text-sm">
        </div>
      </div>
    </div>
  </div>

  <script define:vars={{ redirect }}>
    import { supabase } from '../../lib/supabase';
    
    const form = document.getElementById('registerForm');
    const errorMessage = document.getElementById('errorMessage');
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const email = formData.get('email');
      const password = formData.get('password');
      const fullName = formData.get('fullName');
      const phone = formData.get('phone');
      const nip = formData.get('nip');
      const address = formData.get('address');
      
      try {
        // Zarejestruj uÅ¼ytkownika
        const { data: authData, error: authError } = await supabase.auth.signUp({
          email,
          password,
        });
        
        if (authError) {
          throw authError;
        }
        
        if (authData.user) {
          // Zapisz dane profilu
          const { error: profileError } = await supabase
            .from('profiles')
            .update({
              full_name: fullName,
              phone_number: phone,
              nip: nip || null,
              address: address || null,
            })
            .eq('id', authData.user.id);
          
          if (profileError) {
            console.error('BÅ‚Ä…d aktualizacji profilu:', profileError);
          }
          
          // Zaloguj automatycznie
          const { data: loginData, error: loginError } = await supabase.auth.signInWithPassword({
            email,
            password,
          });
          
          if (loginError) {
            throw loginError;
          }
          
          if (loginData.session) {
            // Zapisz token w ciasteczku
            document.cookie = `sb-access-token=${loginData.session.access_token}; path=/; max-age=${loginData.session.expires_in}`;
            
            // Przekieruj
            window.location.href = redirect;
          }
        }
      } catch (error) {
        errorMessage.textContent = error.message || 'BÅ‚Ä…d rejestracji';
        errorMessage.classList.remove('hidden');
      }
    });
  </script>
</Layout>