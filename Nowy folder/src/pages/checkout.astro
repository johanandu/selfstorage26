import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { createCheckoutSession } from '../lib/stripe';

// Sprawd≈∫ autoryzacjƒô
const token = Astro.cookies.get('sb-access-token');

if (!token) {
  return Astro.redirect('/auth/login?redirect=/checkout');
}

// Pobierz u≈ºytkownika
const { data: { user }, error: authError } = await supabase.auth.getUser(token.value);

if (authError || !user) {
  Astro.cookies.delete('sb-access-token', { path: '/' });
  return Astro.redirect('/auth/login?redirect=/checkout');
}

// Pobierz dane u≈ºytkownika
const { data: profile } = await supabase
  .from('profiles')
  .select('*')
  .eq('id', user.id)
  .single();

// Pobierz ID jednostki z URL
const url = new URL(Astro.request.url);
const unitId = url.searchParams.get('unit');

if (!unitId) {
  return Astro.redirect('/');
}

// Pobierz dane jednostki
const { data: unit, error: unitError } = await supabase
  .from('units')
  .select('*')
  .eq('id', unitId)
  .eq('status', 'available')
  .single();

if (unitError || !unit) {
  return Astro.redirect('/');
}

// Utw√≥rz sesjƒô checkout
let checkoutUrl = '';
try {
  const session = await createCheckoutSession({
    unit,
    customerEmail: user.email,
    customerId: profile?.stripe_customer_id,
    successUrl: `${import.meta.env.PUBLIC_APP_URL}/dashboard`,
    cancelUrl: `${import.meta.env.PUBLIC_APP_URL}/`,
  });
  
  checkoutUrl = session.url || '';
} catch (error) {
  console.error('B≈ÇƒÖd tworzenia sesji checkout:', error);
}

const formatPrice = (price: number) => {
  return (price / 100).toFixed(2);
};
