---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const isAuthenticated = Astro.cookies.has('sb-access-token');
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Self-Storage Premium - bezobsługowy wynajem magazynów z BLIK, automatycznymi fakturami VAT i premium UX." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      
      ::-webkit-scrollbar-track {
        background: #1A1A1A;
      }
      
      ::-webkit-scrollbar-thumb {
        background: #6A6A6A;
        border-radius: 4px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: #EAEAEA;
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 bg-background/90 backdrop-blur-md border-b border-secondary z-50">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
              <span class="text-text-dark font-bold text-lg">S</span>
            </div>
            <span class="text-xl font-bold text-accent font-canela">Self-Storage</span>
          </div>
          
          <div class="hidden md:flex items-center space-x-8">
            <a href="/#units" class="text-gray-300 hover:text-accent transition-colors">Magazyny</a>
            <a href="/#features" class="text-gray-300 hover:text-accent transition-colors">Funkcje</a>
            <a href="/dashboard" class="text-gray-300 hover:text-accent transition-colors">Panel</a>
          </div>
          
          <div class="flex items-center space-x-4">
            {isAuthenticated ? (
              <a 
                href="/dashboard" 
                class="bg-accent text-text-dark px-6 py-2 rounded-full font-semibold hover:bg-gray-300 transition-colors"
              >
                Panel
              </a>
            ) : (
              <div class="flex items-center space-x-4">
                <a 
                  href="/auth/login" 
                  class="text-gray-300 hover:text-accent transition-colors"
                >
                  Zaloguj
                </a>
                <a 
                  href="/auth/register" 
                  class="bg-accent text-text-dark px-6 py-2 rounded-full font-semibold hover:bg-gray-300 transition-colors"
                >
                  Zarejestruj
                </a>
              </div>
            )}
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-primary border-t border-secondary py-12">
      <div class="container mx-auto px-6 text-center">
        <div class="flex items-center justify-center space-x-3 mb-6">
          <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
            <span class="text-text-dark font-bold text-lg">S</span>
          </div>
          <span class="text-xl font-bold text-accent font-canela">Self-Storage</span>
        </div>
        
        <p class="text-gray-400 mb-4">
          System Self-Storage v1.0 - Premium UX + Pełna Automatyzacja
        </p>
        
        <p class="text-sm text-gray-500">
          © 2024 Self-Storage. Wszystkie prawa zastrzeżone.
        </p>
      </div>
    </footer>

    <style>
      @import '../styles/global.css';
    </style>
  </body>
</html>