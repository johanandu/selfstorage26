---
import LayoutV2 from '../layouts/LayoutV2.astro';
import { supabase } from '../lib/supabase';

const unitId = Astro.url.searchParams.get('unitId');

if (!unitId) return Astro.redirect('/#oferta');

const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) return Astro.redirect(`/auth/login?redirect=/checkout?unitId=${unitId}`);

// Pobierz Unit
const { data: unit } = await supabase.from('units').select('*').eq('id', unitId).single();
if (!unit) return Astro.redirect('/');

// Pobierz Usera i Profil
const { data: { user } } = await supabase.auth.getUser(accessToken);
const { data: profile } = await supabase.from('profiles').select('*').eq('id', user.id).single();

const basePrice = unit.price_gross / 100;
---

<LayoutV2 title="Konfiguracja Wynajmu">
  <div class="min-h-screen bg-[#0a0a0a] pt-24 pb-20">
    <div class="container mx-auto px-6 max-w-5xl">
      
      <h1 class="text-3xl font-bold text-white mb-8">Konfiguracja Wynajmu</h1>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- LEWA KOLUMNA: FORMULARZ -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- 1. WYBÓR OKRESU -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-6">
            <h2 class="text-xl font-bold text-white mb-4">1. Wybierz okres wynajmu</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              
              <!-- 1 Miesiąc -->
              <label class="cursor-pointer relative">
                <input type="radio" name="duration" value="1" class="peer sr-only" checked onchange="updatePrice()">
                <div class="p-4 rounded-xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 transition-all text-center h-full flex flex-col justify-center">
                  <div class="font-bold text-white">1 Miesiąc</div>
                  <div class="text-sm text-gray-400 peer-checked:text-blue-200">{basePrice} zł</div>
                </div>
              </label>

              <!-- 6 Miesięcy -->
              <label class="cursor-pointer relative">
                <input type="radio" name="duration" value="6" class="peer sr-only" onchange="updatePrice()">
                <div class="p-4 rounded-xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 transition-all text-center">
                  <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-green-500 text-black text-xs font-bold px-2 py-1 rounded-full">-5%</div>
                  <div class="font-bold text-white">6 Miesięcy</div>
                  <div class="text-sm text-gray-400 peer-checked:text-blue-200">{(basePrice * 6 * 0.95).toFixed(0)} zł</div>
                </div>
              </label>

              <!-- 12 Miesięcy -->
              <label class="cursor-pointer relative">
                <input type="radio" name="duration" value="12" class="peer sr-only" onchange="updatePrice()">
                <div class="p-4 rounded-xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 transition-all text-center">
                  <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-purple-500 text-white text-xs font-bold px-2 py-1 rounded-full">-10%</div>
                  <div class="font-bold text-white">12 Miesięcy</div>
                  <div class="text-sm text-gray-400 peer-checked:text-blue-200">{(basePrice * 12 * 0.90).toFixed(0)} zł</div>
                </div>
              </label>
            </div>
          </div>

          <!-- 2. DANE DO FAKTURY -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-6">
            <h2 class="text-xl font-bold text-white mb-4">2. Dane do faktury</h2>
            <form id="invoiceForm" class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="md:col-span-2">
                <label class="text-sm text-gray-400 block mb-1">Nazwa Firmy / Imię i Nazwisko</label>
                <input type="text" name="fullName" value={profile?.full_name || ''} class="w-full bg-[#0a0a0a] border border-white/10 rounded-lg p-3 text-white focus:border-blue-500 outline-none" required>
              </div>
              
              <div>
                <label class="text-sm text-gray-400 block mb-1">NIP (opcjonalnie)</label>
                <input type="text" name="nip" value={profile?.nip || ''} class="w-full bg-[#0a0a0a] border border-white/10 rounded-lg p-3 text-white focus:border-blue-500 outline-none" placeholder="0000000000">
              </div>

              <div>
                <label class="text-sm text-gray-400 block mb-1">Telefon</label>
                <input type="text" name="phone" value={profile?.phone_number || ''} class="w-full bg-[#0a0a0a] border border-white/10 rounded-lg p-3 text-white focus:border-blue-500 outline-none" required>
              </div>

              <div class="md:col-span-2">
                <label class="text-sm text-gray-400 block mb-1">Adres (Ulica, Kod, Miasto)</label>
                <input type="text" name="address" value={profile?.address || ''} class="w-full bg-[#0a0a0a] border border-white/10 rounded-lg p-3 text-white focus:border-blue-500 outline-none" required>
              </div>
            </form>
          </div>
        </div>

        <!-- PRAWA KOLUMNA: PODSUMOWANIE -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 bg-white text-black rounded-3xl p-6 shadow-xl">
            <h3 class="text-xl font-bold mb-4">Podsumowanie</h3>
            
            <div class="flex items-center gap-4 mb-6 pb-6 border-b border-gray-200">
              <div class="w-16 h-16 bg-gray-200 rounded-lg bg-cover bg-center" style={`background-image: url('${unit.image_url}')`}></div>
              <div>
                <div class="font-bold">{unit.name}</div>
                <div class="text-sm text-gray-600">{unit.size}</div>
              </div>
            </div>

            <div class="space-y-2 mb-6 text-sm">
              <div class="flex justify-between">
                <span>Cena jedn.:</span>
                <span>{basePrice} zł / mc</span>
              </div>
              <div class="flex justify-between">
                <span>Okres:</span>
                <span id="summaryMonths">1 mies.</span>
              </div>
              <div class="flex justify-between text-green-600 font-bold hidden" id="summaryDiscountRow">
                <span>Rabat:</span>
                <span id="summaryDiscount">-0 zł</span>
              </div>
            </div>

            <div class="flex justify-between items-end mb-6 pt-4 border-t border-gray-200">
              <span class="text-gray-600">Razem do zapłaty:</span>
              <span class="text-3xl font-bold" id="totalPrice">{basePrice} zł</span>
            </div>

            <button id="payBtn" class="w-full bg-black text-white py-4 rounded-xl font-bold hover:bg-gray-800 transition-all flex justify-center items-center gap-2">
              <span>Zapłać (BLIK / Karta)</span>
            </button>
            
            <div id="errorMsg" class="text-red-600 text-sm mt-4 text-center hidden"></div>
            
            <p class="text-xs text-center text-gray-500 mt-4">
              Klikając zapłać, akceptujesz regulamin. Płatności obsługuje Stripe.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SKRYPT JS (Ceny i Wysyłka) -->
  <script define:vars={{ basePrice, unitId }}>
    const payBtn = document.getElementById('payBtn');
    const errorMsg = document.getElementById('errorMsg');
    const form = document.getElementById('invoiceForm');

    // Funkcja aktualizacji ceny na żywo
    window.updatePrice = () => {
      const duration = document.querySelector('input[name="duration"]:checked').value;
      const months = parseInt(duration);
      let total = basePrice * months;
      
      // Rabaty
      if (months === 6) total *= 0.95;
      if (months === 12) total *= 0.90;

      // UI Update
      document.getElementById('summaryMonths').innerText = `${months} mies.`;
      document.getElementById('totalPrice').innerText = `${total.toFixed(2)} zł`;
      
      const discountRow = document.getElementById('summaryDiscountRow');
      if (months > 1) {
        discountRow.classList.remove('hidden');
        const regularPrice = basePrice * months;
        document.getElementById('summaryDiscount').innerText = `-${(regularPrice - total).toFixed(2)} zł`;
      } else {
        discountRow.classList.add('hidden');
      }
    };

    // Logika płatności
    payBtn.addEventListener('click', async () => {
      payBtn.disabled = true;
      payBtn.innerText = 'Przetwarzanie...';
      errorMsg.classList.add('hidden');

      // Zbieramy dane
      const formData = new FormData(form);
      const invoiceData = Object.fromEntries(formData.entries());
      const duration = document.querySelector('input[name="duration"]:checked').value;

      try {
        // Walidacja
        if (!invoiceData.fullName || !invoiceData.address || !invoiceData.phone) {
          throw new Error('Uzupełnij dane do faktury/kontaktu.');
        }

        const res = await fetch('/api/create-checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            unitId,
            duration: parseInt(duration), // Wysyłamy ile miesięcy
            invoiceData // Wysyłamy dane do faktury
          })
        });

        const data = await res.json();
        
        if (!res.ok) throw new Error(data.error);
        
        window.location.href = data.url;

      } catch (err) {
        console.error(err);
        errorMsg.innerText = err.message;
        errorMsg.classList.remove('hidden');
        payBtn.disabled = false;
        payBtn.innerText = 'Zapłać (BLIK / Karta)';
      }
    });
  </script>
</LayoutV2>