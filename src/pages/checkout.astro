---
import LayoutV2 from '../layouts/LayoutV2.astro';
import { supabase } from '../lib/supabase';

// 1. Sprawd藕 parametry URL
const unitId = Astro.url.searchParams.get('unitId');

if (!unitId) {
  return Astro.redirect('/#oferta');
}

// 2. Sprawd藕 czy u偶ytkownik jest zalogowany
const accessToken = Astro.cookies.get('sb-access-token')?.value;

if (!accessToken) {
  // Przekieruj do logowania, a potem wr贸 tutaj
  return Astro.redirect(`/auth/login?redirect=/checkout?unitId=${unitId}`);
}

// 3. Pobierz dane o magazynie
const { data: unit, error } = await supabase
  .from('units')
  .select('*')
  .eq('id', unitId)
  .single();

if (error || !unit) {
  console.error('Unit error:', error);
  return Astro.redirect('/?error=unit_not_found');
}

// 4. Pobierz dane u偶ytkownika (do faktury)
const { data: { user } } = await supabase.auth.getUser(accessToken);
const { data: profile } = await supabase.from('profiles').select('*').eq('id', user.id).single();

// Obliczenia
const priceNetto = (unit.price_gross / 1.23) / 100;
const priceBrutto = unit.price_gross / 100;
const vat = priceBrutto - priceNetto;
---

<LayoutV2 title="Podsumowanie Zam贸wienia">
  <div class="min-h-screen bg-[#0a0a0a] pt-24 pb-12">
    <div class="container mx-auto px-6 max-w-4xl">
      
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Podsumowanie Zam贸wienia</h1>
        <p class="text-gray-400">Sprawd藕 szczeg贸y przed dokonaniem patnoci</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <!-- LEWA KOLUMNA: SZCZEGY -->
        <div class="md:col-span-2 space-y-6">
          <!-- Karta Produktu -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-8">
            <h2 class="text-2xl font-bold text-white mb-6">Wybrany Magazyn</h2>
            
            <div class="flex items-start gap-6">
              <div class="w-32 h-24 bg-gray-800 rounded-xl bg-cover bg-center hidden sm:block" 
                   style={`background-image: url('${unit.image_url || "https://images.unsplash.com/photo-1590247813693-5541d1c609fd?w=200&h=200&fit=crop"}')`}>
              </div>
              
              <div class="flex-1">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-xl font-bold text-white">{unit.name}</h3>
                    <p class="text-gray-400 mt-1">{unit.size}</p>
                  </div>
                  <div class="text-right">
                    <div class="text-xl font-bold text-white">{priceBrutto.toFixed(2)} PLN</div>
                    <div class="text-sm text-gray-500">brutto / mc</div>
                  </div>
                </div>

                <div class="mt-6 pt-6 border-t border-white/5 space-y-2 text-sm text-gray-300">
                  <div class="flex justify-between">
                    <span>Okres rozliczeniowy:</span>
                    <span class="text-white">1 miesic (odnawialny)</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Dostp:</span>
                    <span class="text-white">Natychmiastowy (24/7)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Dane do Faktury -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-8">
            <h2 class="text-xl font-bold text-white mb-4">Dane do faktury</h2>
            <div class="text-gray-300 space-y-1">
              <p><span class="text-gray-500">Odbiorca:</span> {profile?.full_name || user?.email}</p>
              <p><span class="text-gray-500">NIP:</span> {profile?.nip || 'Brak (Paragon)'}</p>
              <p><span class="text-gray-500">Email:</span> {user?.email}</p>
            </div>
            <p class="text-xs text-gray-500 mt-4">* Aby zmieni dane, edytuj profil w panelu klienta.</p>
          </div>
        </div>

        <!-- PRAWA KOLUMNA: PATNO -->
        <div class="md:col-span-1">
          <div class="bg-white text-black rounded-3xl p-8 sticky top-24">
            <h2 class="text-2xl font-bold mb-6">Do zapaty</h2>
            
            <div class="space-y-3 mb-8 pb-8 border-b border-gray-200">
              <div class="flex justify-between text-gray-600">
                <span>Cena netto</span>
                <span>{priceNetto.toFixed(2)} z</span>
              </div>
              <div class="flex justify-between text-gray-600">
                <span>VAT (23%)</span>
                <span>{vat.toFixed(2)} z</span>
              </div>
              <div class="flex justify-between text-2xl font-bold pt-2">
                <span>Razem</span>
                <span>{priceBrutto.toFixed(2)} z</span>
              </div>
            </div>

            <button 
              id="payBtn"
              data-unit-id={unit.id}
              class="w-full bg-black text-white font-bold py-4 rounded-xl hover:bg-gray-800 transition-all flex items-center justify-center gap-2 group"
            >
              <span>Zapa bezpiecznie</span>
              <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>

            <div class="mt-4 flex items-center justify-center gap-2 text-xs text-gray-500">
              <span> Patnoci obsuguje Stripe (BLIK / Karta)</span>
            </div>
            
            <div id="paymentError" class="hidden mt-4 p-3 bg-red-100 text-red-600 text-sm rounded-lg text-center"></div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    const payBtn = document.getElementById('payBtn');
    const errorBox = document.getElementById('paymentError');

    if (payBtn) {
      payBtn.addEventListener('click', async () => {
        // UI Loading
        const originalText = payBtn.innerHTML;
        payBtn.innerHTML = 'Przetwarzanie...';
        payBtn.disabled = true;
        errorBox.classList.add('hidden');

        const unitId = payBtn.dataset.unitId;

        try {
          // 1. Wysyamy 偶danie utworzenia sesji patnoci
          const response = await fetch('/api/create-checkout', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ unitId }),
          });

          const result = await response.json();

          if (!response.ok) {
            throw new Error(result.error || 'Bd inicjalizacji patnoci');
          }

          // 2. Przekierowanie do Stripe
          if (result.url) {
            window.location.href = result.url;
          } else {
            throw new Error('Nie otrzymano linku do patnoci');
          }

        } catch (err) {
          console.error(err);
          errorBox.textContent = err.message;
          errorBox.classList.remove('hidden');
          payBtn.innerHTML = originalText;
          payBtn.disabled = false;
        }
      });
    }
  </script>
</LayoutV2>