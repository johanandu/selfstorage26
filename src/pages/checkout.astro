---
import LayoutV2 from '../layouts/LayoutV2.astro';
import { supabase } from '../lib/supabase';

const unitId = Astro.url.searchParams.get('unitId');
if (!unitId) return Astro.redirect('/#oferta');

const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) return Astro.redirect(`/auth/login?redirect=/checkout?unitId=${unitId}`);

// Dane unitu
const { data: unit } = await supabase.from('units').select('*').eq('id', unitId).single();
if (!unit) return Astro.redirect('/');

// Dane profilu
const { data: { user } } = await supabase.auth.getUser(accessToken);
const { data: profile } = await supabase.from('profiles').select('*').eq('id', user.id).single();

// CENNIK
const priceMonth = unit.price_gross / 100;
// Cena dzienna = 1/20 ceny miesicznej (tzw. narzut kr贸tkoterminowy)
// Np. 200 z/mc -> 10 z/dzie
const priceDay = Math.ceil(priceMonth / 20); 
---

<LayoutV2 title="Konfiguracja Wynajmu">
  <div class="min-h-screen bg-[#0a0a0a] pt-24 pb-24">
    <div class="container mx-auto px-6 max-w-6xl">
      
      <div class="mb-10">
        <h1 class="text-4xl font-bold text-white mb-2">Finalizacja Wynajmu</h1>
        <p class="text-gray-400">Wybierz, na jak dugo potrzebujesz magazynu.</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        
        <!-- LEWA KOLUMNA -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- SEKCJA 1: Wyb贸r Okresu -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-8">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-blue-600 text-sm">1</span>
              Czas trwania
            </h2>
            
            <!-- PRZECZNIK TRYBU -->
            <div class="flex p-1 bg-black/50 rounded-xl mb-8 border border-white/10 w-fit">
              <button id="modeDays" class="px-6 py-2 rounded-lg text-sm font-bold text-white bg-blue-600 transition-all shadow-lg" onclick="setMode('day')">
                Kr贸tkoterminowy (Dni)
              </button>
              <button id="modeMonths" class="px-6 py-2 rounded-lg text-sm font-bold text-gray-400 hover:text-white transition-all" onclick="setMode('month')">
                Dugoterminowy (Miesice)
              </button>
            </div>

            <!-- OPCJA A: DNI (SUWAK) -->
            <div id="containerDays" class="block animate-fade-in">
              <div class="mb-4 flex justify-between items-end">
                <label class="text-gray-400 text-sm">Ilo dni:</label>
                <div class="text-3xl font-bold text-white"><span id="daysDisplay">1</span> <span class="text-sm font-normal text-gray-500">dzie</span></div>
              </div>
              <input 
                type="range" 
                id="daysInput" 
                min="1" 
                max="30" 
                value="1" 
                class="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer accent-blue-600"
                oninput="updateDays(this.value)"
              >
              <div class="flex justify-between text-xs text-gray-500 mt-2">
                <span>1 dzie</span>
                <span>30 dni</span>
              </div>
              <p class="mt-4 text-sm text-blue-400 bg-blue-500/10 p-3 rounded-lg border border-blue-500/20">
                 Cena za dob: <b>{priceDay} z</b> (Wy偶sza stawka przy kr贸tkim najmie)
              </p>
            </div>

            <!-- OPCJA B: MIESICE (RADIO) -->
            <div id="containerMonths" class="hidden animate-fade-in">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <label class="cursor-pointer relative group">
                  <input type="radio" name="durationMonth" value="1" class="peer sr-only" checked onchange="updateSummary()">
                  <div class="h-full p-6 rounded-2xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 hover:bg-white/10 transition-all text-center">
                    <div class="font-bold text-white text-lg">1 Miesic</div>
                    <div class="mt-2 font-mono text-xl text-white">{priceMonth} z</div>
                  </div>
                </label>

                <label class="cursor-pointer relative group">
                  <input type="radio" name="durationMonth" value="6" class="peer sr-only" onchange="updateSummary()">
                  <div class="h-full p-6 rounded-2xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 hover:bg-white/10 transition-all text-center">
                    <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-green-500 text-black text-xs font-bold px-2 py-1 rounded-full">RABAT -5%</div>
                    <div class="font-bold text-white text-lg">6 Miesicy</div>
                    <div class="mt-2 font-mono text-xl text-white">{(priceMonth * 6 * 0.95).toFixed(0)} z</div>
                  </div>
                </label>

                <label class="cursor-pointer relative group">
                  <input type="radio" name="durationMonth" value="12" class="peer sr-only" onchange="updateSummary()">
                  <div class="h-full p-6 rounded-2xl border border-white/10 bg-white/5 peer-checked:bg-blue-600 peer-checked:border-blue-500 hover:bg-white/10 transition-all text-center">
                    <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-purple-500 text-white text-xs font-bold px-2 py-1 rounded-full">RABAT -10%</div>
                    <div class="font-bold text-white text-lg">12 Miesicy</div>
                    <div class="mt-2 font-mono text-xl text-white">{(priceMonth * 12 * 0.90).toFixed(0)} z</div>
                  </div>
                </label>
              </div>
            </div>
          </div>

          <!-- SEKCJA 2: Formularz -->
          <div class="bg-[#151515] border border-white/10 rounded-3xl p-8">
            <h2 class="text-xl font-bold text-white mb-6">Dane najemcy</h2>
            <form id="invoiceForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="md:col-span-2">
                <label class="block text-sm text-gray-400 mb-2">Nazwa / Imi i Nazwisko</label>
                <input type="text" name="fullName" value={profile?.full_name || ''} required class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl px-4 py-3 text-white focus:border-blue-500 outline-none">
              </div>
              <div>
                <label class="block text-sm text-gray-400 mb-2">NIP (opcjonalnie)</label>
                <input type="text" name="nip" value={profile?.nip || ''} placeholder="000-000-00-00" class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl px-4 py-3 text-white focus:border-blue-500 outline-none">
              </div>
              <div>
                <label class="block text-sm text-gray-400 mb-2">Telefon</label>
                <input type="text" name="phone" value={profile?.phone_number || ''} required class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl px-4 py-3 text-white focus:border-blue-500 outline-none">
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm text-gray-400 mb-2">Adres</label>
                <input type="text" name="address" value={profile?.address || ''} required class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl px-4 py-3 text-white focus:border-blue-500 outline-none">
              </div>
            </form>
          </div>
        </div>

        <!-- PRAWA KOLUMNA: PODSUMOWANIE -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 bg-white text-black rounded-3xl p-8 shadow-2xl">
            <h3 class="text-2xl font-bold mb-6">Podsumowanie</h3>
            
            <div class="flex items-center gap-4 mb-6 pb-6 border-b border-gray-200">
              <div class="w-16 h-16 bg-gray-100 rounded-lg bg-cover bg-center" style={`background-image: url('${unit.image_url}')`}></div>
              <div>
                <div class="font-bold">{unit.name}</div>
                <div class="text-sm text-gray-600">{unit.size}</div>
              </div>
            </div>

            <div class="space-y-3 mb-6 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Rodzaj:</span>
                <span class="font-medium" id="summaryType">Kr贸tkoterminowy</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Czas trwania:</span>
                <span class="font-bold" id="summaryDuration">1 dzie</span>
              </div>
            </div>

            <div class="flex justify-between items-end mb-6 pt-4 border-t border-gray-200">
              <span class="text-gray-600 mb-1">Do zapaty:</span>
              <span class="text-4xl font-bold" id="totalPrice">{priceDay} z</span>
            </div>

            <button id="payBtn" class="w-full bg-black text-white py-4 rounded-xl font-bold text-lg hover:bg-gray-800 transition-all flex items-center justify-center gap-2">
              Przejd藕 do patnoci
            </button>
            <div id="errorMsg" class="hidden mt-4 text-red-600 text-sm text-center"></div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- LOGIKA JS -->
  <script define:vars={{ priceMonth, priceDay, unitId }}>
    let currentMode = 'day'; // 'day' lub 'month'
    let currentDuration = 1;

    // Przeczanie zakadek
    window.setMode = (mode) => {
      currentMode = mode;
      
      const btnDays = document.getElementById('modeDays');
      const btnMonths = document.getElementById('modeMonths');
      const divDays = document.getElementById('containerDays');
      const divMonths = document.getElementById('containerMonths');

      if (mode === 'day') {
        btnDays.classList.add('bg-blue-600', 'text-white', 'shadow-lg');
        btnDays.classList.remove('text-gray-400');
        btnMonths.classList.remove('bg-blue-600', 'text-white', 'shadow-lg');
        btnMonths.classList.add('text-gray-400');
        
        divDays.classList.remove('hidden');
        divMonths.classList.add('hidden');
        
        // Reset do slidera
        currentDuration = parseInt(document.getElementById('daysInput').value);
      } else {
        btnMonths.classList.add('bg-blue-600', 'text-white', 'shadow-lg');
        btnMonths.classList.remove('text-gray-400');
        btnDays.classList.remove('bg-blue-600', 'text-white', 'shadow-lg');
        btnDays.classList.add('text-gray-400');
        
        divDays.classList.add('hidden');
        divMonths.classList.remove('hidden');
        
        // Reset do radio
        currentDuration = parseInt(document.querySelector('input[name="durationMonth"]:checked').value);
      }
      updateSummary();
    };

    // Update suwaka dni
    window.updateDays = (val) => {
      document.getElementById('daysDisplay').innerText = val;
      currentDuration = parseInt(val);
      updateSummary();
    };

    // Przeliczanie ceny
    window.updateSummary = () => {
      if (currentMode === 'month') {
         // Pobierz z radio, bo mogo si zmieni klikniciem
         currentDuration = parseInt(document.querySelector('input[name="durationMonth"]:checked').value);
      }

      let total = 0;
      let label = '';

      if (currentMode === 'day') {
        total = priceDay * currentDuration;
        label = `${currentDuration} ${currentDuration === 1 ? 'dzie' : 'dni'}`;
        document.getElementById('summaryType').innerText = 'Kr贸tkoterminowy';
      } else {
        total = priceMonth * currentDuration;
        if (currentDuration === 6) total *= 0.95;
        if (currentDuration === 12) total *= 0.90;
        
        label = `${currentDuration} ${currentDuration === 1 ? 'miesic' : 'miesicy'}`;
        document.getElementById('summaryType').innerText = 'Dugoterminowy';
      }

      document.getElementById('summaryDuration').innerText = label;
      document.getElementById('totalPrice').innerText = `${total.toFixed(2)} z`;
    };

    // Patno
    const payBtn = document.getElementById('payBtn');
    const errorMsg = document.getElementById('errorMsg');
    const form = document.getElementById('invoiceForm');

    payBtn.addEventListener('click', async () => {
      payBtn.disabled = true;
      payBtn.innerText = 'Przetwarzanie...';
      errorMsg.classList.add('hidden');

      const formData = new FormData(form);
      const invoiceData = Object.fromEntries(formData.entries());

      try {
        if (!invoiceData.fullName || !invoiceData.address) throw new Error('Uzupenij dane najemcy.');

        const res = await fetch('/api/create-checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            unitId,
            durationValue: currentDuration,
            durationUnit: currentMode, // 'day' lub 'month'
            invoiceData
          })
        });

        const data = await res.json();
        if (!res.ok) throw new Error(data.error);
        window.location.href = data.url;

      } catch (err) {
        errorMsg.innerText = err.message;
        errorMsg.classList.remove('hidden');
        payBtn.disabled = false;
        payBtn.innerText = 'Przejd藕 do patnoci';
      }
    });
  </script>
</LayoutV2>