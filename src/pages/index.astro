              <div class="flex justify-between items-end">
                <span class="text-3xl font-bold text-white">{(unit.price_gross / 100).toFixed(0)} zÅ‚</span>
                <span class="text-sm text-gray-500 mb-1">/miesiÄ…c brutto</span>
              </div>
            </div>

            {unit.status === 'available' ? (
              <a href={`/checkout?unitId=${unit.id}`} class="block w-full text-center bg-white text-black font-bold py-4 rounded-xl hover:bg-gray-200 transition-colors">
                Rezerwuj Teraz
              </a>
            ) : (
              <button disabled class="block w-full text-center bg-white/5 text-gray-500 font-bold py-4 rounded-xl cursor-not-allowed border border-white/5">
                NiedostÄ™pny
              </button>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 5. GALERIA -->
  <section class="py-20 bg-[#0f0f0f]">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white">Zobacz jak to wyglÄ…da</h2>
      </div>
      <Gallery />
    </div>
  </section>

  <!-- 6. FAQ -->
  <section class="py-20 bg-[#0a0a0a]">
    <div class="container mx-auto px-6 max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white">Pytania i Odpowiedzi</h2>
