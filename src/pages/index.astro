---
import LayoutV2 from '../layouts/LayoutV2.astro';
import StatsTile from '../components/bento/StatsTile.astro';
import WeatherTile from '../components/bento/WeatherTile.astro';
import GateTile from '../components/bento/GateTile.jsx';
import { supabase } from '../lib/supabase';

// 1. POBIERANIE DANYCH Z BAZY (Zamiast awaryjnego getCollection)
let units = [];
let availableCount = 0;
let occupancyRate = 0;
let userUnit = null;

// SprawdÅº czy uÅ¼ytkownik jest zalogowany (po ciasteczku)
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const isAuthenticated = !!accessToken;

try {
  // A. Pobierz wszystkie unity
  const { data: unitsData, error } = await supabase
    .from('units')
    .select('*')
    .order('price_gross', { ascending: true });

  if (unitsData) {
    units = unitsData;
    const total = units.length;
    const available = units.filter(u => u.status === 'available').length;
    
    availableCount = available;
    occupancyRate = total > 0 ? Math.round(((total - available) / total) * 100) : 0;
  }

  // B. JeÅ›li zalogowany, sprÃ³buj pobraÄ‡ jego unit do GateTile
  if (isAuthenticated) {
    // Pobieramy usera Å¼eby mieÄ‡ pewnoÅ›Ä‡ ID
    const { data: { user } } = await supabase.auth.getUser(accessToken);
    
    if (user) {
      const { data: subData } = await supabase
        .from('subscriptions')
        .select('*, units(*)')
        .eq('user_id', user.id)
        .eq('status', 'active')
        .limit(1)
        .single();
        
      if (subData && subData.units) {
        userUnit = subData.units;
      }
    }
  }

} catch (e) {
  console.error("BÅ‚Ä…d Å‚adowania danych:", e);
}

// Mock statystyk biznesowych (do Bento)
const stats = {
  activeRentals: occupancyRate > 0 ? Math.floor(units.length * (occupancyRate/100)) : 0,
  satisfaction: '4.9/5',
  uptime: '99.9%',
};
