      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {units.map((unit) => (
          <div class="group relative bg-[#151515] border border-white/10 rounded-3xl p-6 transition-all hover:-translate-y-2 hover:border-white/20 hover:shadow-2xl">
            <div class="aspect-video bg-gray-800 rounded-2xl mb-6 overflow-hidden relative">
               <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110" 
                    style={`background-image: url('${unit.image_url || "https://images.unsplash.com/photo-1590247813693-5541d1c609fd?w=500&h=300&fit=crop"}')`}>
