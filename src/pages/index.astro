  <section class="min-h-screen flex items-center justify-center relative overflow-hidden bg-[#0a0a0a]">
    <!-- TÅ‚o -->
    <div class="absolute inset-0 opacity-30 pointer-events-none">
      <div class="absolute top-20 left-20 w-96 h-96 bg-blue-600 rounded-full blur-[120px] animate-pulse"></div>
