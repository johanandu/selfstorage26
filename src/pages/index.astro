---
import Layout from '../layouts/Layout.astro';
import PremiumCard from '../components/ui/PremiumCard.jsx';
import { supabase } from '../lib/supabase';
import { motion } from 'framer-motion';

// Pobierz dostpne jednostki
const { data: units, error } = await supabase
  .from('units')
  .select('*')
  .order('name');

if (error) {
  console.error('Bd pobierania jednostek:', error);
}

// Sprawd藕 czy u偶ytkownik jest zalogowany
const isAuthenticated = Astro.cookies.has('sb-access-token');
---

<Layout title="Self-Storage Premium - Twoje rzeczy w bezpiecznych rkach">
  <!-- Hero Section -->
  <section class="hero-gradient min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background Animation -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-96 h-96 bg-accent rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-secondary rounded-full blur-3xl animate-pulse delay-1000"></div>
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <motion.div
        initial={{ opacity: 0, y: 50 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 1, ease: 'easeOut' }}
      >
        <h1 class="text-6xl md:text-8xl font-bold font-canela text-accent mb-6 text-shadow">
          Apple wr贸d<br/>magazyn贸w
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
          Bezobsugowy wynajem magazyn贸w z premium UX. Zaloguj si, wybierz, zapa BLIKiem - brama si otwiera automatycznie.
        </p>
        
        {!isAuthenticated && (
          <motion.a
            href="/auth/login"
            whileHover={{ scale: 1.05 }}
            whileTap={{ scale: 0.95 }}
            class="inline-block bg-accent text-text-dark font-bold py-4 px-8 rounded-full text-lg hover:bg-gray-300 transition-colors"
          >
            Rozpocznij teraz
          </motion.a>
        )}
      </motion.div>
    </div>
  </section>

  <!-- Units Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <motion.div
        initial={{ opacity: 0 }}
        whileInView={{ opacity: 1 }}
        transition={{ duration: 0.8 }}
        viewport={{ once: true }}
        class="text-center mb-16"
      >
        <h2 class="text-5xl font-bold font-canela text-accent mb-6">Dostpne magazyny</h2>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Wybierz jednostk odpowiedni dla Twoich potrzeb. Wszystkie wyposa偶one w system monitoringu i kontroli dostpu.
        </p>
      </motion.div>

      {units && units.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {units.map((unit, index) => (
            <motion.div
              key={unit.id}
              initial={{ opacity: 0, y: 50 }}
              whileInView={{ opacity: 1, y: 0 }}
              transition={{ duration: 0.5, delay: index * 0.1 }}
              viewport={{ once: true }}
            >
              <PremiumCard
                unit={unit}
                client:load
                onSelect={(selectedUnit) => {
                  if (isAuthenticated) {
                    window.location.href = `/checkout?unit=${selectedUnit.id}`;
                  } else {
                    window.location.href = `/auth/login?redirect=/checkout?unit=${selectedUnit.id}`;
                  }
                }}
              />
            </motion.div>
          ))}
        </div>
      ) : (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          class="text-center py-20"
        >
          <div class="text-6xl mb-4"></div>
          <h3 class="text-2xl font-bold text-accent mb-2">Brak dostpnych magazyn贸w</h3>
          <p class="text-gray-400">Sprawd藕 ponownie p贸藕niej lub skontaktuj si z nami.</p>
        </motion.div>
      )}
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-primary">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <motion.div
          initial={{ opacity: 0, y: 30 }}
          whileInView={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6 }}
          viewport={{ once: true }}
          class="text-center"
        >
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl text-text-dark"></span>
          </div>
          <h3 class="text-2xl font-bold text-accent mb-4">Patnoci BLIK</h3>
          <p class="text-gray-300">
            Szybkie patnoci mobilne BLIK oraz tradycyjne przelewy przez Przelewy24.
          </p>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 30 }}
          whileInView={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6, delay: 0.1 }}
          viewport={{ once: true }}
          class="text-center"
        >
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl text-text-dark"></span>
          </div>
          <h3 class="text-2xl font-bold text-accent mb-4">Faktury VAT</h3>
          <p class="text-gray-300">
            Automatyczne wystawianie faktur VAT 23% i wysyka na email w formacie PDF.
          </p>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 30 }}
          whileInView={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6, delay: 0.2 }}
          viewport={{ once: true }}
          class="text-center"
        >
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl text-text-dark"></span>
          </div>
          <h3 class="text-2xl font-bold text-accent mb-4">Automatyzacja</h3>
          <p class="text-gray-300">
            Zero kontaktu z czowiekiem. Wszystko dziaa automatycznie - od patnoci po otwarcie bramy.
          </p>
        </motion.div>
      </div>
    </div>
  </section>
</Layout>