      <div class="h-[500px] w-full rounded-3xl overflow-hidden border border-white/10 relative z-0">
        <!-- client:only="react" jest kluczowe dla map (Leaflet), bo uÅ¼ywajÄ… window -->
        <MapComponent client:only="react" units={units} />
