---
import LayoutV2 from '../layouts/LayoutV2.astro';
import StatsTile from '../components/bento/StatsTile.astro';
import WeatherTile from '../components/bento/WeatherTile.astro';
import GateTile from '../components/bento/GateTile.jsx';

// NOWE KOMPONENTY (WidzÄ™ je w strukturze plikÃ³w)
import MapComponent from '../components/MapComponent.jsx';
import FAQ from '../components/FAQ.astro';
import Gallery from '../components/Gallery.astro';

import { supabase } from '../lib/supabase';

// 1. POBIERANIE DANYCH Z BAZY
let units = [];
let availableCount = 0;
let occupancyRate = 0;
let userUnit = null;

const accessToken = Astro.cookies.get('sb-access-token')?.value;
const isAuthenticated = !!accessToken;

try {
  // Pobierz unity
  const { data: unitsData } = await supabase
    .from('units')
    .select('*')
    .order('price_gross', { ascending: true });

  if (unitsData) {
    units = unitsData;
    const total = units.length;
    const available = units.filter(u => u.status === 'available').length;
    availableCount = available;
    occupancyRate = total > 0 ? Math.round(((total - available) / total) * 100) : 0;
  }

  // JeÅ›li zalogowany, pobierz unit usera do GateTile
  if (isAuthenticated) {
    const { data: { user } } = await supabase.auth.getUser(accessToken);
    if (user) {
      const { data: subData } = await supabase
        .from('subscriptions')
        .select('*, units(*)')
        .eq('user_id', user.id)
        .eq('status', 'active')
        .maybeSingle(); // maybeSingle jest bezpieczniejsze niÅ¼ single
        
      if (subData?.units) {
        userUnit = subData.units;
      }
    }
  }
} catch (e) {
  console.error("BÅ‚Ä…d danych:", e);
}

// Statystyki
const stats = {
  satisfaction: '4.9/5',
  uptime: '99.9%',
};
