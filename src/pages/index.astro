      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-6">
        
        <!-- Gate Tile (Logika: pokaÅ¼ jeÅ›li ma unit, lub zachÄ™tÄ™) -->
        {userUnit ? (
          <div class="md:col-span-2 lg:col-span-2 row-span-2">
            <GateTile client:load isSubscribed={true} unitId={userUnit.id} unitName={userUnit.name} />
          </div>
        ) : (
          <div class="md:col-span-2 lg:col-span-2 row-span-2 p-8 rounded-3xl bg-[#1a1a1a] border border-white/5 flex flex-col justify-center items-center text-center">
             <div class="text-5xl mb-4">ðŸš€</div>
             <h3 class="text-2xl font-bold text-white">Zacznij tutaj</h3>
             <p class="text-gray-400 mt-2 mb-6">Wynajmij boks i otwÃ³rz bramÄ™ aplikacjÄ….</p>
             <a href="#oferta" class="px-6 py-2 bg-blue-600 rounded-full text-white font-bold hover:bg-blue-500">Wynajmij</a>
          </div>
        )}

        <StatsTile title="DostÄ™pne" value={availableCount} trend={availableCount > 0 ? 'DostÄ™pne' : 'Brak'} icon="ðŸ“¦" size="medium" />
        <StatsTile title="ZajÄ™toÅ›Ä‡" value={`${occupancyRate}%`} trend={occupancyRate > 80 ? 'Wysoka' : 'Norm'} icon="ðŸ“Š" size="medium" />
        <WeatherTile />
        <StatsTile title="Zadowolenie" value={stats.satisfaction} icon="â­" size="small" />
        <StatsTile title="Monitoring" value="24/7" icon="ðŸŽ¥" size="small" />
      </div>
    </div>
  </section>

  <!-- 3. MAPA LOKALIZACJI (NowoÅ›Ä‡ V3) -->
  <section class="py-24 bg-[#0a0a0a] border-b border-white/5">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Lokalizacja</h2>
