---
export interface Props {
  images?: string[];
  title?: string;
}

const { 
  images = [
    '/images/gallery/1.jpg',
    '/images/gallery/2.jpg',
    '/images/gallery/3.jpg',
    '/images/gallery/4.jpg',
    '/images/gallery/5.jpg',
    '/images/gallery/6.jpg',
  ],
  title = 'Galeria'
} = Astro.props;

// Mock images - w produkcji podłącz prawdziwe
const mockImages = [
  'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=400&h=500&fit=crop',
  'https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=400&h=300&fit=crop',
  'https://images.unsplash.com/photo-1527004013197-933c4bb611b3?w=400&h=600&fit=crop',
  'https://images.unsplash.com/photo-1484154218962-a197022b5858?w=400&h=400&fit=crop',
  'https://images.unsplash.com/photo-1497366216548-37526070297c?w=400&h=350&fit=crop',
  'https://images.unsplash.com/photo-1505691938895-1758d7feb511?w=400&h=450&fit=crop',
];
---

<div class="w-full max-w-6xl mx-auto">
  <h2 class="text-4xl font-bold text-accent font-display text-center mb-12">{title}</h2>
  
  <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
    {mockImages.map((image, index) => (
      <div class="break-inside-avoid group cursor-pointer">
        <div class="relative overflow-hidden rounded-2xl bg-glass-bg border border-glass-border backdrop-blur-xl transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-accent/20">
          <img 
            src={image} 
            alt={`Magazyn ${index + 1}`}
            class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-110"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-xl font-bold text-white mb-2">Magazyn {index + 1}</h3>
              <p class="text-gray-200 text-sm">Kliknij aby powiększyć</p>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>